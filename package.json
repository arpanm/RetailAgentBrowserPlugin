{
  "name": "retail-agent",
  "version": "1.0.0",
  "description": "AI-powered multi-platform ecommerce shopping assistant Chrome extension",
  "author": "RetailAgent Team",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,html,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,html,css}\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "security": "npm audit",
    "prepare": "husky install",
    "validate": "npm run lint && npm run format:check && npm run test"
  },
  "keywords": [
    "chrome-extension",
    "ecommerce",
    "shopping",
    "ai",
    "automation",
    "retail"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/RetailAgent.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/RetailAgent/issues"
  },
  "homepage": "https://github.com/yourusername/RetailAgent#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "vitest": "^1.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "copy-webpack-plugin": "^11.0.0"
  },
  "dependencies": {},
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css}": [
      "prettier --write"
    ]
  }
}

