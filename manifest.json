{
    "manifest_version": 3,
    "name": "RetailAgent - AI Shopping Assistant",
    "version": "1.0.0",
    "description": "AI-powered multi-platform ecommerce shopping assistant. Shop smarter across Amazon, Flipkart, eBay, Walmart and more with natural language commands.",
    "author": "RetailAgent Team",
    "homepage_url": "https://github.com/yourusername/RetailAgent",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "geolocation",
        "sidePanel"
    ],
    "host_permissions": [
        "https://www.amazon.in/*",
        "https://www.amazon.com/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.de/*",
        "https://www.amazon.fr/*",
        "https://www.flipkart.com/*",
        "https://www.ebay.com/*",
        "https://www.ebay.in/*",
        "https://www.walmart.com/*",
        "https://generativelanguage.googleapis.com/*",
        "https://maps.googleapis.com/*"
    ],
    "background": {
        "service_worker": "src/background/service_worker.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "RetailAgent - AI Shopping Assistant"
    },
    "side_panel": {
        "default_path": "src/popup/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.in/*",
                "https://www.amazon.com/*",
                "https://www.amazon.co.uk/*",
                "https://www.amazon.de/*",
                "https://www.amazon.fr/*"
            ],
            "js": ["src/content/amazon-loader.js"],
            "run_at": "document_idle"
        },
        {
            "matches": ["https://www.flipkart.com/*"],
            "js": ["src/content/flipkart-loader.js"],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://www.ebay.com/*",
                "https://www.ebay.in/*"
            ],
            "js": ["src/content/ebay-loader.js"],
            "run_at": "document_idle"
        },
        {
            "matches": ["https://www.walmart.com/*"],
            "js": ["src/content/walmart-loader.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "docs/privacy-policy.html",
                "src/content/*.js",
                "src/content/shared/*.js",
                "src/content/platforms/*.js",
                "src/lib/*.js"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}